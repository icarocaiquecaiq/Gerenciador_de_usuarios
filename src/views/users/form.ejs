<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Adicionar Categoria</title>
    <!-- Bootstrap CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <div class="container mt-5">
        <h1 class="mb-4">Adicionar Categoria</h1>
        <form action="/users/save" method="POST">
            <div class="mb-3">
                <label for="name" class="form-label">Nome:</label>
                <input type="text" id="name" name="name" class="form-control" required placeholder="ex: Eggster">
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email:</label>
                <input type="email" class="email form-control" id="email" name="email" required placeholder= "exemplo@dominio.com">
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Senha:</label>
                <input type="password" class="password form-control" id="password" name="senha" required minlength="8"
                    maxlength="20" placeholder="digite a senha">
                <span id="passwordHelpInline" class="form-text d-block">
                    Deve possuir de 8 Ã  20 cararacteres.
                </span>
            </div>
            <div class="mb-3">
                <label for="confirmPassword" class="form-label">Confirmar Senha:</label>
                <input type="password" class="confirmPassword form-control" id="confirmPassword" name="senha" required
                    minlength="8" maxlength="20" placeholder="confirme a senha">
            </div>
            <div class="mb-3">
                <label for="papelOption" class="form-label">Papel:</label>
                <select class="form-select" id="papelOption" aria-label="Default select example" name="papel" required>
                    <option selected value="usuario">Usuario</option>
                    <option value="administrador">Administrador</option>
                    <option value="desenvolvedor">Desenvolvedor</option>
                    <option value="gerente">Gerente</option>
                </select>
            </div>
            <div class="mb-3 form-check">
                <input class="form-check-input" type="checkbox" value="true" name="isAtivo" id="flexCheckChecked" checked>
                <label class="form-check-label" for="flexCheckChecked">
                    Ativo
                </label>
            </div>
            <button type="submit" class="btn btn-primary">Adicionar</button>
        </form>
        <a href="/users" class="btn btn-secondary mt-3">Ver Usuarios</a>
    </div>

    <!-- FORM INPUT STYLE -->
    <script>
        const inputs = document.querySelectorAll("input");
        const select = document.querySelectorAll("select");
        const formElements = [...inputs, ...select]
        formElements.forEach((each) => {
            each.classList.add("border-primary-subtle");
        })
    </script>
    <!-- Bootstrap JS CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>